<UserControl x:Class="Chrome.Views.ShellUserControls.TopBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             Height="43"
             DataContext="{Binding}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border x:Name="PART_ChromeTitleBar"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Background="{StaticResource DefaultBackground}"
                BorderBrush="Transparent"
                BorderThickness="1"
                CornerRadius="4"
                Margin="1">
            <Grid HorizontalAlignment="Stretch">
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="15,0,0,0"
                           Foreground="#fff">
                    METRO CRM Light
                </TextBlock>
                <Border Background="#444444"
                        BorderBrush="#444444"
                        BorderThickness="1"
                        CornerRadius="4"
                        Margin="0,0,15,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Height="28"
                        Width="30" />
            </Grid>
        </Border>

        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="1">
            <Border BorderBrush="Transparent"
                    Background="{StaticResource DefaultBackground}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Width="38"
                    Margin="0,0,1,0"
                    Padding="1">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding ViewModel.MinimizeShellCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Border>
            <Border BorderBrush="Transparent"
                    Background="{StaticResource DefaultBackground}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Width="38"
                    Margin="0,0,2,0"
                    Padding="1">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding ViewModel.MaximizeShellCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Border>
            <Border BorderBrush="Transparent"
                    Background="{StaticResource DefaultBackground}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Width="38"
                    Margin="0"
                    Padding="1">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding ViewModel.CloseShellCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Border>
        </StackPanel>

    </Grid>
</UserControl>