<UserControl x:Class="Chrome.Views.ShellUserControls.TopBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                MouseLeftButtonDown="DragWindow"
                Background="#212121"
                BorderBrush="Transparent"
                BorderThickness="1"
                CornerRadius="4"
                Margin="1">

            <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="15,0,0,0"
                       Foreground="#fff">
                METRO CRM Light
            </TextBlock>
        </Border>

        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="1">
            <Border BorderBrush="Transparent"
                    Background="#212121"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,1,0"
                    Padding="1">
                <Border x:Name="BtnMinimize"
                        Width="38"
                        VerticalAlignment="Stretch"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        MouseLeftButtonUp="BtnMinimize_Click" />
            </Border>
            <Border BorderBrush="Transparent"
                    Background="#212121"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,2,0"
                    Padding="1">
                <Border x:Name="BtnMaximize"
                        Width="38"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        MouseLeftButtonUp="BtnMaximize_Click">
                    <TextBlock Foreground="White" />
                </Border>
            </Border>
            <Border BorderBrush="Transparent"
                    Background="Firebrick"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0"
                    Padding="1">
                <Border x:Name="BtnClose"
                        Width="38"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        MouseLeftButtonUp="BtnClose_Click" />
            </Border>
        </StackPanel>

    </Grid>
</UserControl>