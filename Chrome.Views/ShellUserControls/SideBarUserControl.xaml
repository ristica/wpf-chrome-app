                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <materialDesign:PackIcon Kind="Apps"
                                             Foreground="White"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Height="20"
                                             Width="20" />
                </Border>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>