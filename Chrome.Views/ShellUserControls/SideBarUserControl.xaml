<UserControl x:Class="Chrome.Views.ShellUserControls.SideBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Background="DarkBlue"
                BorderBrush="Transparent"
                BorderThickness="1"
                CornerRadius="4">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="M"
                       Foreground="Yellow"
                       FontSize="20"
                       FontWeight="Bold">

            </TextBlock>
        </Border>
        <Border Grid.Row="1"
                Background="#212121"
                BorderBrush="Transparent"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,2,0,0">
            <Grid>
                <StackPanel Margin="0"
                            VerticalAlignment="Center">
                    <Border Background="#444444"
                            BorderBrush="#444444"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Stretch"
                            Height="28">

                    </Border>
                    <Border Background="#444444"
                            BorderBrush="#444444"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="4,6,4,0"
                            HorizontalAlignment="Stretch"
                            Height="28">

                    </Border>
                    <Border Background="#444444"
                            BorderBrush="#444444"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="4,6,4,0"
                            HorizontalAlignment="Stretch"
                            Height="28">

                    </Border>
                    <Border Background="#444444"
                            BorderBrush="#444444"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="4,6,4,0"
                            HorizontalAlignment="Stretch"
                            Height="28">

                    </Border>
                    <Border Background="#444444"
                            BorderBrush="#444444"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="4,6,4,0"
                            HorizontalAlignment="Stretch"
                            Height="28">

                    </Border>
                    <Border Background="#444444"
                            BorderBrush="#444444"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="4,6,4,0"
                            HorizontalAlignment="Stretch"
                            Height="28">

                    </Border>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
