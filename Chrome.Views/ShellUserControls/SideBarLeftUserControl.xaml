            <ItemsControl ItemsSource="{Binding ViewModel.Customers, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                          VerticalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="LastCustomerBorder"
                                Background="{StaticResource DefaultBrush}"
                                BorderBrush="#666"
                                BorderThickness="1"
                                CornerRadius="4"
                                Margin="20,2,0,2"
                                HorizontalAlignment="Left"
                                Height="30"
                                Width="200"
                                Cursor="Hand"
                                Style="{StaticResource ToLightAnimatedBorder}"
                                ToolTip="{Binding FirstName}">
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="LastCustomerBorder"
                                                             Storyboard.TargetProperty="Width"
                                                             To="250"
                                                             Duration="0:0:0.25" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="LastCustomerBorder"
                                                             Storyboard.TargetProperty="Width"
                                                             To="200"
                                                             Duration="0:0:0.25" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Grid>
                                <Grid.ToolTip>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Kundennummer}"></TextBlock>
                                        <TextBlock Text="-" Margin="3,0"></TextBlock>
                                        <TextBlock Text="{Binding FirstName}" Margin="0,0,4,0"></TextBlock>
                                        <TextBlock Text="{Binding LastName}"></TextBlock>
                                    </StackPanel>
                                </Grid.ToolTip>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="AccountClockOutline"
                                                         Foreground="{StaticResource ForegroundLightBrush}"
                                                         HorizontalAlignment="Left"
                                                         VerticalAlignment="Center"
                                                         Opacity=".3"
                                                         Height="20"
                                                         Width="20"
                                                         Margin="6,0,0,0" />
                                <StackPanel Orientation="Horizontal" Grid.Column="1">
                                    <TextBlock HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="8,0,7,0"
                                               Text="{Binding Kundennummer}"
                                               Foreground="{StaticResource ForegroundLightBrush}" />
                                    <TextBlock HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="0,0,0,0"
                                               Foreground="{StaticResource ForegroundLightBrush}">
                                        <Run Text="{Binding FirstName}"></Run>
                                        <Run Text="{Binding LastName}"></Run>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </Grid>
    </Border>
</UserControl>