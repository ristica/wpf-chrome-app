<UserControl x:Class="Chrome.Views.ShellUserControls.ShellContentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:shellUserControls="clr-namespace:Chrome.Views.ShellUserControls">
    <Border Background="{StaticResource DefaultBackground}"
            BorderBrush="Transparent"
            BorderThickness="1"
            CornerRadius="4"
            Margin="1">
        <Grid>
            <Border VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <TextBlock Foreground="White">Content Area</TextBlock>
            </Border>

            <shellUserControls:SearchBarUserControl />
            <shellUserControls:SearchBarHandleUserControl />
        </Grid>

    </Border>
</UserControl>