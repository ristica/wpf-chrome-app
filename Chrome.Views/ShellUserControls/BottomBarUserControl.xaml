<UserControl x:Class="Chrome.Views.ShellUserControls.BottomBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="44"
             DataContext="{Binding}">

    <Border HorizontalAlignment="Stretch"
            Background="{StaticResource DefaultBrush}"
            BorderBrush="Transparent"
            BorderThickness="1"
            CornerRadius="4"
            Margin="1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Open Window"
                    Command="{Binding ViewModel.OpenTestWindowCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />

            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <TextBlock Foreground="White"
                           Text="{Loc HelloWorld}"
                           VerticalAlignment="Center"
                           Margin="0,0,20,00" />
            </StackPanel>

        </Grid>

    </Border>
</UserControl>