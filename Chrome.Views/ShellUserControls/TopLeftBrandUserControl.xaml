<UserControl x:Class="Chrome.Views.ShellUserControls.TopLeftBrandUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="{StaticResource MetroBlueBrush}"
            BorderBrush="{StaticResource TransparentBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Margin="1"
            HorizontalAlignment="Left"
            Width="44">
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Text="M"
                   Foreground="{StaticResource MetroYellowBrush}"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,4,0,0" />
    </Border>
</UserControl>