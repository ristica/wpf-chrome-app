<UserControl x:Class="Chrome.Views.Windows.ShellUserControls.MainContentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             DataContext="{Binding}">
    <Border HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="0"
            BorderBrush="DodgerBlue"
            Margin="5,20,5,35">
        <ContentPresenter Content="{Binding ViewModel.CurrentUserControl, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>
    </Border>
</UserControl>
