<UserControl x:Class="Chrome.Views.Windows.ShellUserControls.MainContentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             DataContext="{Binding}">

    <ItemsControl ItemsSource="{Binding ViewModel.Views, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Background="Gray"
                        MouseMove="CanvasMainOnMouseMove"
                        MouseUp="CanvasMainOnMouseUp" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemContainerStyle>
            <Style TargetType="UserControl">
                <Setter Property="Canvas.Top"
                        Value="50" />
                <Setter Property="Canvas.Left"
                        Value="50" />
                <Setter Property="Width" Value="600" />
                <Setter Property="Height"
                        Value="400" />
            </Style>
        </ItemsControl.ItemContainerStyle>
    </ItemsControl>

</UserControl>